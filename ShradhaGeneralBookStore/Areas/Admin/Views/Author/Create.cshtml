@{
    Layout = "~/Areas/Admin/Views/Shared/Admin-Layout.cshtml";
}
@model ShradhaGeneralBookStore.Models.ViewModels.AddAuthorViewModel;



<!--start main wrapper-->
<main class="main-wrapper">
    <div class="main-content">
        <div class="card p-4 rounded-2xl shadow-lg bg-gradient-to-r from-indigo-900 to-indigo-800 text-white max-w-xl mx-auto mt-10">
            <h2 class="text-2xl font-bold mb-6">Add New Author</h2>

            <form asp-area="Admin" asp-controller="Author" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-4">


                    <label  class="block text-sm font-medium mb-1">Author Name</label>
                    <input asp-for="Name" class="author-input" type="text"
                           placeholder="Enter author's full name" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <button type="submit" class="bg-pink-600 hover:bg-pink-500 transition-all px-6 py-2 rounded-lg text-white font-semibold shadow-md">
                    Save Author
                </button>
            </form>
        </div>
    </div>
</main>


